{
  "name": "project-tracker",
  "version": "1.0.0",
  "description": "project tracking application",
  "main": "app.js",
  "app": "bundle.js",
  "targets": {
    "app": {
      "source": "./public/js/index.js",
      "distDir": "./public/js",
      "engines": {
